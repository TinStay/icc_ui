{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/elements/*": ["components/elements/*"],
      "@/sections/*": ["components/sections/*"],
      "@/constants": ["utils/constants.tsx"],
      "@/helpers": ["utils/helpers.tsx"],
      "@/types": ["utils/types.tsx"],
      "@/contexts": ["utils/contexts.tsx"],
      "@/firebase/*": ["utils/firebase/*"],
      "@/firebase-client": ["utils/firebase/firebaseClient.js"], 
      "@/firebase-admin": ["utils/firebase/firebaseAdmin.js"], 
      "@/FS-client-functions": ["utils/firebase/firestore/functions.ts"],
      "@/FS-admin-functions" : ["utils/firebase/firestore/fsAdminFunctions.js"],
      "@/FS-client-refs" : ["utils/firebase/firestore/references.js"],
      "@/FS-admin-refs" : ["utils/firebase/firestore/adminReferences.js"],
      "@/auth": ["utils/firebase/auth/initAuth.js"],
      "@/messaging/*": ["utils/firebase/messaging/*"],
      "@/public/*": ["public/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
